<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div>
        <h2>注文履歴一覧</h2>
      </div>      
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @order_informations.each do |order_information| %>
          <tbody>
            <tr>
              <td><%= order_information.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order_information.postal_code %><%= order_information.address %><%= order_information.name %></td>
               <td>
                <% order_information.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= order_information.total_amount.to_s(:delimited, delimiter: ',') %></td>
              <td><%= order_information.order_status %></td>
              <td><%= link_to "表示する", public_order_information_path(order_information) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>   
    </div>
  </div>
</div>