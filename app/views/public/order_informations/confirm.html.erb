<h2>注文情報確認</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price*cart_item.amount %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tbody>
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>
  </tbody>
</table>
<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @total.round.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>
<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @total_price %></td>
    </tr>
  </tbody>
</table>
<div>
  <div>
    <%= label_tag :"支払方法" %><%= @order_information.payment_method_i18n %>
  </div>
  <div>
    <%= label_tag :"お届け先" %>

        <%= @order_information.postal_code %>
        <%= @order_information.address %>
        <%= @order_information.name %>

  </div>
</div>

<!--hiddenを使って送付-->
<%= form_with model: @order_information, url: public_order_informations_path, method: :post do |f| %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :postage %>
  <%= f.submit "注文を確定する"%>
<% end %>