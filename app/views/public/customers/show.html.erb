<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h2>マイページ</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h2>登録情報</h2>
    </div>
    <div class="col-lg-3">
      <%= link_to "編集する", edit_public_customer_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

<div class="col-lg-6">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="col-lg-6">
  <h2>配送先</h2>
  <%= link_to "一覧を見る", public_addresses_path %>
</div>
<div class="col-lg-6">
  <h2>注文履歴</h2>
  <%= link_to "一覧を見る", public_order_informations_path %>
</div>