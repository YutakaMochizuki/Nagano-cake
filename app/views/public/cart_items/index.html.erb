<div>
<h2>ショッピングカート</h2>
<%= link_to "カートを空にする" %>
</div>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.price%>
          (<%= cart_item.item.with_tax_price %>)
        </td>
        <td>
          <%= form_with model: @cart_item do |f| %>
            <%= f.select :amount, *[1..50], class: "col-6" %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price * cart_item.amount %>
        </td>
        <td>
          <%= link_to "削除する" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "買い物を続ける", public_items_path %>
  <table>
    <tbody>
      <tr>
        <td>合計金額</td>
          <td><%= @total.round.to_s(:delimited)%></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <%= link_to "確認画面へ進む", new_public_order_information_path %>
</div>