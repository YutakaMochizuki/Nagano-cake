<div class="container">
  <div="row">
    <div class="col-lg-3">
      <h4>新規会員登録</h4>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="col-lg-12">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :"名前" %></td>
            <td><%= f.label :"（姓）" %></td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
            <td><%= f.label :"（名）" %></td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td> <%= f.label :"（セイ）" %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
            <td><%= f.label :"（メイ）" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
            <td></td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td></td>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号（ハイフンなし）" %></td>
            <td></td>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（６文字以上）" %></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（確認用）" %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
    <div>
      <div class="col-lg-3">
        <h4>既に登録済みの方</h4>
      </div>
      <h4><%= link_to "こちら　", "/customers/sign_in" %>からログインしてください。</h4>
    </div>
  </div>
</div>