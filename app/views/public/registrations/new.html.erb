<div class="container">
  <div="row">
    <div class="col-lg-3">
      <h4>新規会員登録</h4>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="col-lg-12">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :"名前" %></td>
            <td>
              <%= f.label :"　（姓）" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
              <%= f.label :"　（名）" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td>
              <%= f.label :"（セイ）" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
              <%= f.label :"（メイ）" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.label :"　　　　" %><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
            <td><%= f.label :"　　　　" %><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.label :"　　　　" %><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", size:40 %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号（ハイフンなし）" %></td>
            <td><%= f.label :"　　　　" %><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（６文字以上）" %></td>
            <td><%= f.label :"　　　　" %><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード（確認用）" %></td>
            <td><%= f.label :"　　　　" %><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.label :"　　　　" %><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
    <div>
      <div class="col-lg-3">
        <h4>既に登録済みの方</h4>
      </div>
      <div class="col-lg-5">
        <h4><%= link_to "こちら　", "/customers/sign_in" %>からログインしてください。</h4>
      </div>
    </div>
  </div>
</div>