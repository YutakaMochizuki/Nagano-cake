<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h2>配送先編集</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
        <div>
          <%= f.label :"郵便番号（ハイフンなし）" %>
          <%= f.text_field :postal_code %>
        </div>
        <div>
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>
        <div>
          <%= f.label :"宛名" %>
          <%= f.text_field :name %>
          <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>