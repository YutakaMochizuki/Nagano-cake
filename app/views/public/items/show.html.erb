<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col-lg-8">
      <%= @item.name %><br>
      <%= @item.introduction %><br>
      ¥<%= (@item.price*1.1).floor %><small>(税込)</small>

      <%= form_with model: @cart_item, url: {controller: 'cart_items', action: 'create'} do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..50] %>
        <%= f.submit 'カートに入れる' %>
       <% end %>
     </div>
  </div>
</div>