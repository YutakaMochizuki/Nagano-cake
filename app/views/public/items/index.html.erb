<div class="container">
  <div class="col-lg-12">
    <div class="row">
      <h2 class="text-center">商品一覧</h2>
      <h6 class="mt-auto mb-auto  text-center">（全<%= @items.count %>件）</h6>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div>
        <table class="row">
          <% @items.each do |item| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to public_item_path(item.id) do %>
                    <%= image_tag item.get_image, width:100, height:100 %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= link_to item.name, public_item_path(item) %></td>
              </tr>
              <tr>
                <td>¥<%= item.price %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
      <div>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>