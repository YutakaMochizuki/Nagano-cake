<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2>注文履歴一覧</h2>
      <table class="table table-borderedless">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= link_to admin_order_detail_path(order_detail) do %>
                  <%= order_detail.order_information.created_at.strftime('%Y/%m/%d') %>
                <% end %>
              </td>
              <td><%= order_detail.order_information.customer.last_name %><%= order_detail.order_information.customer.first_name %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.production_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>