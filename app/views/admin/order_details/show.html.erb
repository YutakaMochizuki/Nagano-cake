<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table>
        <tbody>
          <tr>
            <td>購入者</td>
            <td><%= @order_detail.order_information.customer.last_name %><%= @order_detail.order_information.customer.first_name %></td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order_detail.order_information.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order_detail.order_information.address %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= @order_detail.order_information.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order_detail.order_information.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td><%= @order_detail.order_information.order_status %></td>
            <td>
              <%= form_with model: @order_detail, url: admin_order_detail_path(@order_detail), method: :patch do |f| %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderedless">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価（税込）</td>
            <td>数量</td>
            <td>小計</td>
            <td>製作ステータス</td>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @order_detail.item.name %></td>
              <td><%= @order_detail.price_including_tax %></td>
              <td><%= @order_detail.amount %></td>
              <td><%= (@order_detail.price_including_tax)*(@order_detail.amount) %></td>
              <%= form_with model: @order_detail, url: admin_order_detail_path(@order_detail), method: :patch do |f| %>
                <td><%= f.select :production_status, OrderDetail.production_statuses.keys.to_a %></td>
                <td><%= f.submit "更新", class: "btn btn-success" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>