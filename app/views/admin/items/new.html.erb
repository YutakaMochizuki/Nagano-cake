<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div>
        <h2>商品新規登録</h2>
      </div>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table>
          <tbody>
            <tr>
              <td>商品画像</td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td>商品名</td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
            </tr>
            <tr>
              <td>税抜価格</td>
              <td><%= f.text_field :price %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= f.select :is_active, Item.is_actives.keys %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= link_to "Back", admin_items_path %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>